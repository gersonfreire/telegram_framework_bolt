bot:
  default_bot_token: "your_bot_token_here"
  name: "MyTelegramBot"
  description: "A powerful and extensible Telegram bot framework"
  admin_users:
    - your_telegram_user_id_here
  commands:
    start:
      description: "Start the bot"
      response: "ðŸ‘‹ Welcome! I'm here to help you. Use /help to see available commands."
    help:
      description: "Show available commands"
      response: "Available commands:\n{commands}"
    settings:
      description: "Manage bot settings"
      response: "Current Settings:\n{settings}"
    echo:
      description: "Echo the user's message"
      response: "{message}"